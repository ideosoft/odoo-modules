<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
	<data>
	
		<!-- SINDICATO -->
		<record model="ir.ui.view" id="view_hr_employee_sindicato_tree">
			<field name="name">hr.employee.sindicato.tree</field>
			<field name="model">hr.employee.sindicato</field>
			<field name="arch" type="xml">
				<tree string="Listado de sindicatos">
					<field name="name" />
					<field name="employee_id" string="Delegado" />
				</tree>
			</field>
		</record>

        <record model="ir.ui.view" id="view_hr_employee_sindicato_form">
            <field name="name">hr.employee.sindicato.form</field>
            <field name="model">hr.employee.sindicato</field>
            <field name="arch" type="xml">
                <form string="Formulario sindicato">
                    <sheet>
                        <group>
                            <field name="name" />
							<field name="employee_id" string="Delegado" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hr_employee_sindicato_search">
            <field name="name">hr.employee.sindicato.search</field>
            <field name="model">hr.employee.sindicato</field>
            <field name="arch" type="xml">
                <search>
					<field name="name" />
					<field name="employee_id" string="Delegado" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hr_employee_sindicato_list">
            <field name="name">Sindicato</field>
            <field name="res_model">hr.employee.sindicato</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
		
		
		<!-- MENU HUMANIS -->
		<menuitem id="list_sindicato_menu" name="Sindicatos" parent="ideosoft_humanis_base.main_humanis_menu" action="action_hr_employee_sindicato_list" />
		
		<!-- MENU DESARROLLO -->
		<menuitem id="list_sindicato_menu2" name="Sindicatos" parent="ideosoft_humanis_base.main_sindicato_menu2" action="action_hr_employee_sindicato_list" />
		
	</data>
</openerp>
